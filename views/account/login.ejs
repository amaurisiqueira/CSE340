<h1><%= title %></h1>
<div class="login">
    <form class="login_form" action="/account/login" method="post">
        <div class="login_form_email">
            <label for="login_form_email-field">Email Address:</label>
            <input type="email" id="login_form_email-field" name="account_email" required value="<%= locals.account_email %>">
            <!--<i class='bx bxs-user'></i>-->
        </div>
        <div class="login_form_password">
            <label for="login_form_password-field">Password:</label>
            <input type="password" id="login_form_password-field" name="account_password" 
            required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        </div>
        
        <button class="ogin_form_button" type="submit">Login</button>
        
        <p class="ogin_form_register">
            No Account? <a href="/account/register">Sign-Up</a>
        </p>
    </form>
</div>